@using Noviembre.Core.Entidades
@model List<Ciudadano>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Ciudadanos</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <a href="@Url.Action("Registro", "Ciudadano")" class="btn btn-primary">Agregar nuevo</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Apellido Paterno</th>
                                        <th>Apellido Materno</th>
                                        <th>Telefono</th>
                                        <th>Direccion</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (Ciudadano c in Model)
                                    {
                                        <tr>
                                            <td>
                                                @c.Id
                                            </td>
                                            <td>
                                                @c.Nombre
                                            </td>
                                            <td>
                                                @c.ApellidoPaterno
                                            </td>
                                            <td>
                                                @c.ApellidoMaterno
                                            </td>
                                            <td>
                                                @c.Telefono
                                            </td>
                                            <td>
                                                @c.Direccion
                                            </td>
                                            <td>
                                                @c.Email
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

